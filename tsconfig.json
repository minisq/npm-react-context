{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Bundler", // or "NodeNext" if you prefer Nodeâ€™s resolver
        "jsx": "react-jsx", // enables JSX (React 17+ transform)
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
